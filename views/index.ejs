<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">

    
</head>
<body>
     <nav class="expand-md navbar-dark bg-success">

        <div class="container">
            <a href="/">Task</a>

            <button class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#menu">
            <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="menu">
               <ul class="navbar-nav">
                <li class="nav-item">
                    <a href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a href="/create">Create</a>
                </li>
               </ul>
            </div>
        </div>
     </nav>

     <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h3 class="display-3 text-success">Task list</h3>
            </div>
        </div>
        <div class="row">
            <% tasks.forEach((item,index)=> { %>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="text-center"><%= item.title %></h5>
                        </div>
                        <div class="card-body">
                            <ul class="list-group">
                                <li class="list-group">
                                    <details>
                                        <summary>Content</summary>
                                        <p class="text-justify"><%= item.conten %></p>
                                    </details>
                                </li>

                                <li class="list-grouup-item">
                                       <strong>Start date</strong>
                                       <span class="float-end"><% item.start %></span>
                                </li>

                                <li class="list-grouup-item">
                                    <strong>End date</strong>
                                    <span class="float-end"><% item.end %></span>
                             </li>

                             <li class="list-grouup-item">
                                <strong>Created by</strong>
                                <span class="float-end"><% item.user %></span>
                         </li>
                            </ul>
                        </div>

                        <div class="card-footer">
                            <a href="/update/<%= item._id %>" class="btn bg-primary">Edit</a>
                            <a href="/delete/<%= item._id %>" class="btn bg-success">Delete</a>
                        </div>
                    </div>
                </div>
            <%}) %>
        </div>
     </div>





    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
  </body> 
</body>
</html>